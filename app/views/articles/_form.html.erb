

<%= form_with model: @article do |form| %>
<div>
  <%= form.label :status %><br>
  <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
</div>

  <div>
    <%= form.label :title %>
    <br>
    <%= form.text_field :title %>
    <%@article.errors.full_messages_for(:title).each do |messsage| %>
    <div><%= messsage %> </div>
    <% end %>
   </div>

   <br>
  <div>
    <%= form.label :body%><br>
    <%= form.text_area :body %>
    <%@article.errors.full_messages_for(:body).each do |messsage|%>
    <div><%= messsage %> </div>
    <% end %>
  </div>

   <br>
  <div>
    <%= form.submit %>
  </div>
  <%end%>
  </div>

